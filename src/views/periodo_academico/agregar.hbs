<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/periodo_academico/agregar" method="post">
                        <div class="form group">
                            <h2>Agregar Periodo_Academico</h2>
                        </div>
                        
                        <label for="">Periodo</label>
                        <div class="form-group">
                            <input class="form-control" type="text" name="periodo" id="">
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-warning btn-block">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
<div class="col-md-8"> 
    <div class="card-body">
        <h1>Datos Tabla Periodo_Academico</h1>
       <table class="table">
        <thead>
        <tr>
            <th scope="col">id_periodo</th>
            <th scope="col">periodo</th>
            
        </tr>
    </thead>
    <tbody>
        {{#each periodo}}
        <tr>
            <th scope="row">{{id_periodo}}</th>
            <td>{{periodo}}</td>
            
            <td>

                <a href="eliminar/{{id_periodo}}" class="btn btn-danger">Eliminar</a>
                <a href="" class="btn btn-info">Modificar</a>
                
            </td>
        </tr>
      {{/each}}  
    </tbody>
    </table>
